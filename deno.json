{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window"],
    "strict": true
  },
  "lint": {
    "files": {
      "include": ["src/"],
      "exclude": ["src/testdata/"]
    },
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-explicit-any"]
    }
  },
  "fmt": {
    "files": {
      "include": ["src/"],
      "exclude": ["src/testdata/"]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 100,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  },
  "test": {
    "files": {
      "include": ["src/**/*.test.ts", "src/**/__tests__/**/*.ts"]
    }
  },
  "tasks": {
    "test": "deno test --allow-all --coverage=coverage/",
    "test:watch": "deno test --allow-all --watch",
    "coverage": "deno coverage coverage/ --lcov --output=coverage/lcov.info"
  },
  "importMap": "./import_map.json"
}
